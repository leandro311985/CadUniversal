<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/colorPrimary"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageFoto"
            android:layout_width="129dp"
            android:layout_marginTop="3dp"
            android:scaleType="fitXY"
            android:layout_height="150dp"
            app:srcCompat="@drawable/perfil" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textoNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daniel Ciolfi"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textScaleX="1"
                android:textColor="@color/coresletras"

                />

            <TextView
                android:id="@+id/textoRef"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eu" />

            <TextView
                android:id="@+id/textoFone"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(99)99999999" />

            <TextView
                android:id="@+id/textoend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:text="Rua kkkkk" />

            <TextView
                android:id="@+id/dateCelula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ULTIMA DATA"
                android:textColor="@color/corestel"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>